<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>By:</strong>
  <%= link_to @post.user.username, user_posts_path(name: @post.user.username) %>
</p>

<p>
  <strong>Created:</strong>
  <%= time_ago_in_words(@post.created_at) %>
</p>

<p>
  <strong>Blog entry:</strong>
  <%= @post.blog_entry.html_safe %>
</p>

<% if @post.post_image.url %>
<p>
  <strong>Your Image!:</strong>
  <%= image_tag @post.post_image.url, class:"user-image" %>
</p>

<% end %>


<div id="comments">
	<%= render 'comments/form', comment: @comment %>
	<% @post.comments.each do |comment| %>
		<p>
			<%= link_to comment.user.username, user_posts_path(name: comment.user.username) %> said... <br>
			<%= comment.comment_entry %>
		</p>
	<% end %>
</div>



<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
