<h4>All Posts by <%= @user.username %></h4>

<% @user.posts.each do |post| %>
	<div class="row">
		<div class= "col-8 col-offset-2">
			<div class = "well">
				<h3><%= post.title %></h3>
				<p><%= post.created_at.strftime("%B %e, %Y at %l:%M %p") %></p>
				<p><%= post.blog_entry.html_safe %></p>

				<%= link_to "Show", post, class: "btn btn-info" %>
				<% if current_user.id == @user.id %>
				<%= link_to "Edit", edit_post_path(post), class: "btn btn-warning" %>
				<%= link_to "Delete", post, method: :delete, data: {confirm: 'Are You Sure?'}, class: "btn btn-danger" %>
				<% end %>
			


			</div>
		</div>
	</div>
<% end %>