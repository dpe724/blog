<p id="notice"><%= notice %></p>


    <% @posts.each do |post| %>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="row">
           <%= post.title %>
            </div>
            <div class="row">
              <%= link_to post.user.username, user_posts_path(name: post.user.username) %>
            </div>
            <div class="row">
              <%= image_tag post.user.avatar.url, class: "user-image" %>
            </div>
            <div>
              <%= post.blog_entry %>
            </div>
      </div>
    </div>


    <% end %>

<br>

<%= link_to 'New Post', new_post_path %>

<br>
<%= paginate @posts %>
